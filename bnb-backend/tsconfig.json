{
  "compilerOptions": {
    "target": "ES2020",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowUnusedLabels": true,
    "noEmitOnError": true,   
    
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
